<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Relatório de Atores</title>
  </head>
  <body>
    <h1>Relatório de Atores</h1>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Data de Nascimento</th>
          <th>Nacionalidade</th>
          <th>Filmes</th>
          <th>Principal</th>
        </tr>
      </thead>
      <tbody>
        <% atores.forEach(ator => { %>
        <tr>
          <td><%= ator.nome %></td>
          <td><%= ator.data_nascimento %></td>
          <td><%= ator.nacionalidade %></td>
          <td>
            <% ator.filmes.forEach(filme => { %>
            <span><%= filme.titulo %></span><br />
            <% }); %>
          </td>
          <td><%= ator.principal ? 'Sim' : 'Não' %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
