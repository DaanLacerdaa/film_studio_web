<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pessoas</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script defer src="/js/script.js"></script>

    <style>
      .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        padding: 20px;
      }
      .card {
        background: #fff;
        border-radius: 8px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
      }
      .card h2 {
        margin: 10px 0;
      }
      .card p {
        margin: 5px 0;
        color: #555;
      }
      .card .person-photo img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 10px 0;
      }
      .actions {
        margin-top: 15px;
        display: flex;
        gap: 10px;
        justify-content: center;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>
    <main class="container">
      <h1>Lista de Pessoas</h1>
      <a href="/pessoas/novo" class="btn">Adicionar Nova Pessoa</a>

      <% if (typeof pessoas !== "undefined" && pessoas) { %> <% ["ator",
      "diretor", "produtor"].forEach(tipo => { %> <% if (pessoas[tipo] &&
      pessoas[tipo].length > 0) { %>
      <h2><%= tipo.charAt(0).toUpperCase() + tipo.slice(1) + "es" %></h2>
      <div class="card-grid">
        <% pessoas[tipo].forEach(pessoa => { %>
        <div class="card">
          <h2><%= pessoa.nome %></h2>
          <p>Nascimento: <%= pessoa.data_nascimento %></p>
          <p>Nacionalidade: <%= pessoa.nacionalidade %></p>
          <p>Sexo: <%= pessoa.sexo %></p>
          <div class="actions">
            <a href="/pessoas/<%= pessoa.id %>/editar" class="btn">Editar</a>
            <a href="/pessoas/<%= pessoa.id %>/deletar" class="btn">Deletar</a>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %> <% }) %> <% } else { %>
      <p>Nenhuma pessoa encontrada.</p>
      <% } %>
    </main>
    <%- include('partials/toggle') %>
  </body>
</html>
