<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Relatório de Produtores</title>
  </head>
  <body>
    <h1>Relatório de Produtores</h1>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Data de Nascimento</th>
          <th>Nacionalidade</th>
          <th>Filmes Produzidos</th>
        </tr>
      </thead>
      <tbody>
        <% produtores.forEach(produtor => { %>
        <tr>
          <td><%= produtor.nome %></td>
          <td><%= produtor.data_nascimento %></td>
          <td><%= produtor.nacionalidade %></td>
          <td>
            <% produtor.filmes.forEach(filme => { %>
            <span><%= filme.titulo %></span><br />
            <% }); %>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
